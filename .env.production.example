# Production Environment Variables
# Copy this to .env.production and fill in your values

# Frontend (GitHub Pages)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=https://sandwich-project-api.onrender.com

# Backend (Render.com)
NODE_ENV=production
PORT=5001

# Database (use Supabase or external PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Supabase
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email
SENDGRID_API_KEY=your-sendgrid-key

# Security
JWT_SECRET=generate-a-long-random-string
SESSION_SECRET=generate-another-random-string

# CORS
CORS_ORIGIN=https://your-username.github.io

# Optional services
GOOGLE_SHEETS_API_KEY=your-google-key
STREAM_CHAT_API_KEY=your-stream-key
STREAM_CHAT_API_SECRET=your-stream-secret